@model IEnumerable<ECommerce.Models.OrderModel>

@{
    ViewData["Title"] = "Order History";
}

<div class="container">
    <h1>Order History</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.TotalCost.ToString("C")</td>

                    <td>
                        <a class="btn btn-primary" asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
