@model IEnumerable<ECommerce.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h1>Products</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
