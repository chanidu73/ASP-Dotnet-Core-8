@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<p>
    <a href="@Url.Action("Create", "Products")" class="btn btn-success">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* Iterate over products here *@
        <tr>
            <td>Example Product</td>
            <td>Example Category</td>
            <td>$100.00</td>
            <td>
                <a href="@Url.Action("Edit", "Products", new { id = 1 })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", "Products", new { id = 1 })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    </tbody>
</table>
