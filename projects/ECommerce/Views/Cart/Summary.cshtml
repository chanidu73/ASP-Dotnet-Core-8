@{
    ViewData["Title"] = "Order Summary";
}

<h2>Order Summary</h2>

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@String.Format("{0:C}", item.Price)</td>
                        <td>@String.Format("{0:C}", item.Quantity * item.Price)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>Shipping Information</h4>
        <p>
            <strong>Address:</strong> @Model.ShippingAddress <br />
            <strong>Phone:</strong> @Model.PhoneNumber
        </p>
        @* <h4>Order Total: @String.Format("{0:C}", Model.Sum(x => x.Quantity * x.Price))</h4> *@
        <a href="@Url.Action("PlaceOrder", "Cart")" class="btn btn-primary">Place Order</a>
    </div>
</div>
